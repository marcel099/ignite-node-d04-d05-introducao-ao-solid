{
  "openapi": "3.0.0",
  "info": {
    "title": "\"Introduction to SOLID\" Challenge Documentation",
    "description": "This is an API created in the goal of practicing SOLID principles",
    "version": "1.0.0",
    "contact": {
      "email": "mar.lupatini@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Creates a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john_doe@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "id": "e27668d9-a9c7-4c2e-9f8b-95e63b7dbf32",
                    "name": "John Doe",
                    "email": "john_doe@gmail.com",
                    "admin": false,
                    "created_at": "2020-01-01T00:00:00.000Z",
                    "updated_at": "2020-01-01T00:00:00.000Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "error": "User already exists"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Turn a user into an administrator",
        "description": "Turn a user into a user with administration privileges",
        "responses": {
          "200": {
            "description": "User turned into an administrator",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "id": "e27668d9-a9c7-4c2e-9f8b-95e63b7dbf32",
                    "name": "John Doe",
                    "email": "john_doe@gmail.com",
                    "admin": true,
                    "created_at": "2020-01-01T00:00:00.000Z",
                    "updated_at": "2020-01-02T00:00:00.000Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}